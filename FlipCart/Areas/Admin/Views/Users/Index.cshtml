@model FlipCart.Areas.Admin.Models.RUserApiRes

@{
    ViewData["Title"] = "User";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    Location
                </th>
                <th>
                    Email
                </th>
                <th>
                    DOB
                </th>
                <th>
                    Image
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.results)
            {
                <tr>
                    <td>
                        @item.name.title | @item.name.first @item.name.last
                    </td>
                    <td>
                        @item.location.city | @item.location.state | @item.location.country
                    </td>
                    <td>
                       @item.email
                    </td>
                    <td>
                        @item.dob.date
                    </td>
                    <td>
                       <img src="@item.picture.large" alt="@item.name.first" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.name.first">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.name.first">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.name.first">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
